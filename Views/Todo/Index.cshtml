@model IEnumerable<TaskMVC.Models.Todo>

@{
    ViewData["Title"] = "Todo List";
}

<h2>Todo List</h2>

<p>
    <a href="/Todo/Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Is Completed</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.IsCompleted</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/Todo/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Todo/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
